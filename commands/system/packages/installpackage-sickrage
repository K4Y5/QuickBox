#   under the GPL along with build & install instructions.
#
MASTER=$(cat /etc/apache2/master.txt)
OUTTO="/root/quick-box.log"

function _installSickRage() {
  #sudo git clone https://github.com/SickRage/SickRage.git /srv/sickrage
  sudo git clone https://github.com/SickRage/SickRage.git.  /home/"${MASTER}"/.sickrage
  touch /install/.sickrage.lock
  chown "${MASTER}":"${MASTER}" -R /srv/sickrage

echo -e "[Unit]
Description=SickRage Daemon

[Service]
User=${MASTER}
Group=${MASTER}
Type=forking
GuessMainPID=no
ExecStart=/usr/bin/python /home/"${MASTER}"/.sickrage/SickBeard.py -q --daemon --nolaunch --datadir=/home/"${MASTER}"/.sickrage

[Install]
WantedBy=multi-user.target" > /etc/systemd/system/sickrage.service

  systemctl enable sickrage.service
  sudo service sickrage start
}

_installSickRage

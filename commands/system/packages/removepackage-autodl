function _removepackage-autodl() {
  username=$(whoami);
  rutorrent="/srv/rutorrent/";
  PLUGIN="autodl-irssi"
    for i in $PLUGIN; do
      rm -rf "${rutorrent}/plugins/$i"
      rm -rf /home/${username}/.autodl
      rm -rf /home/${username}/.irssi
      rm /install/.autodlirssi.lock
    done
}

_removepackage-autodl
